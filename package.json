{
  "name": "prl-ccd-definitions",
  "version": "1.0.0",
  "description": "Utility to help creating CCD config definitions",
  "main": "index.js",
  "repository": "git@github.com:hmcts/prl-ccd-definitions.git",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "envs": "node json-env.js",
    "reset-ccd-submodule": "git submodule update --init --recursive && git submodule foreach --recursive git pull origin master && cd ccd-definition-processor && yarn install",
    "setup": "git submodule update --init --recursive && cd ccd-definition-processor && yarn install",
    "lint": "eslint --fix .",
    "test": "NODE_PATH=. mocha test/unit/definitions/**/*.js",
    "test:coverage": "echo test:coverage",
    "test:a11y": "echo test:a11y",
    "codeceptjs": "node $NODE_DEBUG_OPTION ./node_modules/.bin/codeceptjs --verbose",
    "test:crossbrowser-e2e": "MOCHAWESOME_REPORTFILENAME=crossbrowser codeceptjs run-multiple --grep \"@cross-browser\" ${BROWSER_GROUP:-'--all'} -c saucelabs.conf.js --reporter mocha-multi",
    "test:crossbrowser": "./bin/run-crossbrowser-tests.sh",
    "test:uploadFile": "MOCHAWESOME_REPORTFILENAME=functional codeceptjs run --steps -c test/functional/codecept.conf.js --reporter mocha-multi",
    "test:functional": "codeceptjs run --steps -c test/end-to-end/codecept.conf.js",
    "test:fullfunctional": "codeceptjs run --steps -c test/end-to-end/codecept.conf.js",
    "test:smoke": "MOCHAWESOME_REPORTFILENAME=smoke codeceptjs run --steps -c test/smoke/codecept.conf.js --reporter mocha-multi",
    "start": "node index.js",
    "sonar-scan": "node_modules/sonar-scanner/bin/sonar-scanner",
    "highLevelDataSetup": "echo './gradlew highLevelDataSetup --args=$1' > ./temp.sh && sh ./temp.sh",
    "generate-json": "cd ccd-definition-processor && yarn xlsx2json -D ../definitions/private-law/json -i ../definitions/private-law/xlsx/ccd-config-PRL-base.xlsx && pretty-quick --pattern 'definitions/**/json/**.json'",
    "generate-excel-local": "yarn envs local generate-excel -e '*-prod.json'",
    "generate-excel-demo": "yarn envs demo generate-excel -e '*-prod.json'",
    "generate-excel-aat": "yarn envs aat generate-excel -e '*-prod.json'",
    "generate-excel-perftest": "yarn envs perftest generate-excel -e '*-prod.json'",
    "generate-excel-ithc": "yarn envs ithc generate-excel -e '*-prod.json'",
    "generate-excel-prod": "yarn envs prod generate-excel -e '*-nonprod.json'",
    "generate-excel": "cd ccd-definition-processor && yarn json2xlsx -D ../definitions/private-law/json -o ../definitions/private-law/xlsx/ccd-config-PRL-${TARGET_ENV:-base}.xlsx",
    "generate-excel-all": "yarn generate-excel-local && yarn generate-excel-aat && yarn generate-excel-demo && yarn generate-excel-ithc && yarn generate-excel-perftest && yarn generate-excel-prod"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@hmcts/nodejs-healthcheck": "1.7.0",
    "@hmcts/properties-volume": "0.0.13",
    "codeceptjs": "^2.6.11",
    "config": "^3.0.1",
    "eslint-plugin-codeceptjs": "^1.0.0",
    "express": "^4.16.4",
    "html_codesniffer": "^2.5.1",
    "json-schema": "^0.4.0",
    "left-pad": "^1.0.0",
    "minimist": "^1.2.3",
    "puppeteer": "^5.5.0",
    "ws": "^7.4.6"
  },
  "devDependencies": {
    "@hmcts/eslint-config": "^1.4.0",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-mocha": "^5.3.0",
    "husky": "^2.2.0",
    "lodash": "^4.17.21",
    "mocha": "^9.2.0",
    "mocha-junit-reporter": "^2.0.0",
    "mocha-multi": "^1.1.6",
    "mochawesome": "^7.1.2",
    "otp": "^0.1.3",
    "pre-commit": "^1.2.2",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "request": "^2.88.2",
    "request-promise-native": "^1.0.9",
    "sonar-scanner": "^3.1.0"
  },
  "resolutions": {
    "flat": "^5.0.1",
    "minimatch": "^3.0.5",
    "json5": "^2.2.2",
    "follow-redirects": "^1.14.7",
    "axios": "^0.21.2",
    "codeceptjs/mocha-junit-reporter": ">=2.1.1",
    "cookiejar": ">=2.1.4"
  },
  "packageManager": "yarn@3.5.0"
}
