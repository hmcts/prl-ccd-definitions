      echo "================================================================"
      curl -s -k -X DELETE "https://idam-api.aat.platform.hmcts.net/testing-support/accounts/$testUsername"
      exit 1
    fi
    done
    
    echo "================================================================"
    echo "Deleting the test user"
    echo "================================================================"
    curl -s -k -X DELETE "https://idam-api.aat.platform.hmcts.net/testing-support/accounts/$testUsername"
---
