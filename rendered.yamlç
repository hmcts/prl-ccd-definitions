  - name: test-release-ccd-definition-store-test
    image: busybox
    env:
      - name: SERVICE_NAME
        value: test-release-ccd-definition-store
    command: ["sh", "-c", "httpstatuscode=$(wget -S http://$SERVICE_NAME/health 2>&1 | grep HTTP/ | awk 'END{print $2}') && [ \"$httpstatuscode\" = \"200\" ]"]
    resources:
      limits:
        cpu: 500m
        memory: 512Mi
      requests:
        cpu: 100m
        memory: 128Mi
  restartPolicy: Never
